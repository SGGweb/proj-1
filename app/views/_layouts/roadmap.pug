section.roadmap
  .roadmap_wrapper
    .container.roadmap_bg--wrapper
      .roadmap_header.d-flex.flex-column.align-items-center
        h2.roadmap_subtitle Дорожная карта
        img.roadmap_cover(src="uploads/roadmap-timeline.png", alt="Road map timeline")
